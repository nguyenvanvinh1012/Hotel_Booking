@model Hotel_Booking.Models.TaiKhoan

@{
    ViewBag.Title = "Disable";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="@Url.Action("Index", "Home",new { area = "Admin" })" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a href="@Url.Action("Index", "AdminTaiKhoan",new { area = "Admin" })" class="breadcrumb-item">List of Account</a>
            <span class="breadcrumb-item active">Account Status</span>
        </nav>
    </div>
</div>

<div class="card-body">
    @if (Model.Active == false)
    {
        <h4 class="card-title">Account is locked</h4>
    }
    else
    {
        <h4 class="card-title">Account is active</h4>
    }

    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>

                <tr>
                    <td>Account Name:</td>
                    <td>@Model.TenTaiKhoan</td>
                </tr>
                <tr>
                    <td>Full Name:</td>
                    <td>@Model.HoTen</td>
                </tr>
                <tr>
                    <td>Phone:</td>
                    <td>@Model.SoDienThoai</td>
                </tr>
                <tr>
                    <td>Email Address:</td>
                    <td>@Model.Email</td>
                </tr>

                <tr>

                    <td>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <form asp - action="Disable" asp - route - id="@Model.TenTaiKhoan">
                                <input type="hidden" asp -for="MaTaiKhoan" />
                                @if (Model.Active == true)
                                {
                                    <input type="submit" value="Confirm disable" class="btn btn-danger" />
                                }
                                else
                                {
                                    <input type="submit" value="Confirm unlock" class="btn btn-success btn-tone m-r-5" />
                                }
                            </form>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
