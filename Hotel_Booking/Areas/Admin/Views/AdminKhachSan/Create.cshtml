@model Hotel_Booking.Models.KhachSan

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="@Url.Action("Index", "Home",new { area = "Admin" })" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a href="@Url.Action("Index", "AdminKhachSan",new { area = "Admin" })" class="breadcrumb-item">Danh sách khách sạn</a>
            <span class="breadcrumb-item active">Thêm mới khách sạn</span>
        </nav>
    </div>
</div>

@using (Html.BeginForm("Create", "AdminKhachSan", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Tên khách sạn</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" , placeholder = "Tên khách sạn" } })
            @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" , placeholder = "Địa chỉ" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">SDT</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" , placeholder = "Số điện thoại" } })
            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Cách trung tâm</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CachTrungTam, new { htmlAttributes = new { @class = "form-control" , placeholder = "Cách trung tâm" } })
            @Html.ValidationMessageFor(model => model.CachTrungTam, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                <input name="GiapBien" id="checkbox1" type="checkbox" />
                <label for="checkbox1">Giáp biển</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Mô tả</label>
        <div class="col-md-10">
            <textarea  required placeholder="Mô tả" class="form-control" name="moTa"></textarea>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label col-md-3">Bữa ăn</label>
            <div class="col-md-10">
                <select class="form-control" name="buaAn" id="buaAn">
                    <option value="0">Không có</option>
                    <option value="1">Bữa sáng</option>
                    <option value="2">Bữa sáng và trưa</option>
                    <option value="3">Bữa sáng và tối</option>
                    <option value="4" selected>Cả ba bữa</option>
                </select>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label col-md-3">Đánh giá</label>
            <div class="col-md-10">
                <select class="form-control" name="danhGia" id="danhGia">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5" selected>5</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label col-md-3">Thành phố</label>
            <div class="col-md-10">
                @Html.DropDownList("IdThanhPho", new SelectList(ViewBag.ListThanhPho, "Id", "Ten"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdThanhPho, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label col-md-3">Loại KS</label>
            <div class="col-md-10">
                @Html.DropDownList("IdLoaiKhachSan", new SelectList(ViewBag.ListLoaiKhachSan, "Id", "Ten"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdLoaiKhachSan, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div>
        <label class="control-label col-md-2">Ảnh khách sạn </label>
        <div class="form-group">
            <label class="control-label col-md-2">Ảnh 1</label>
            <div class="col-md-10">
                <input type="file" name="ImageFile1" required class="form-control" accept=".png, .jpg, .jpeg" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ảnh 2</label>
            <div class="col-md-10">

                <input type="file" name="ImageFile2" required class="form-control" accept=".png, .jpg, .jpeg" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ảnh 3</label>
            <div class="col-md-10">
                <input type="file" name="ImageFile3" required class="form-control" accept=".png, .jpg, .jpeg" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ảnh 4</label>
            <div class="col-md-10">
                <input type="file" name="ImageFile4" required class="form-control" accept=".png, .jpg, .jpeg" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary">Thêm mới</button>
        </div>
    </div>

</div>
}