@model Hotel_Booking.Models.LoaiKhachSan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="@Url.Action("Index", "Home",new { area = "Admin" })" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a href="@Url.Action("Index", "AdminLoaiKhachSan",new { area = "Admin" })" class="breadcrumb-item">List of Hotel-Type</a>
            <span class="breadcrumb-item active">Confirm Delete</span>
        </nav>
    </div>
</div>

<div class="card-body">
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.Id</td>
                </tr>
                <tr>
                    <td>Type Name:</td>
                    <td>@Model.Ten</td>
                </tr>
                <tr>
                    <td>Description:</td>
                    <td>@Model.MoTa</td>
                </tr>
                <tr>
                    <td>Image:</td>
                    <td>
                        <img width="200" height="200" src="@Model.UrlHinhAnh" />
                    </td>
                </tr>
                <tr>
                    <td>Confirm Delete:</td>
                    <td>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <form asp-action="Delete">
                                <input type="hidden" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        }
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>