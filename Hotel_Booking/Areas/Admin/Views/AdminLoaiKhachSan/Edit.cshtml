@model Hotel_Booking.Models.LoaiKhachSan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="@Url.Action("Index", "Home",new { area = "Admin" })" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a href="@Url.Action("Index", "AdminLoaiKhachSan",new { area = "Admin" })" class="breadcrumb-item">List of Hotel-Type</a>
            <span class="breadcrumb-item active">Edit</span>
        </nav>
    </div>
</div>

@using (Html.BeginForm("Edit", "AdminLoaiKhachSan", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Hotel-Type</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2">Type Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Description</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @if (ViewBag.Active == true)
                    {
                        <input name="Active" id="checkbox1" type="checkbox" checked />
                    }
                    else
                    {
                        <input name="Active" id="checkbox1" type="checkbox" />
                    }
                    <label for="checkbox1">Active</label>
                </div>
            </div>
        </div>
        <div>
            <label class="control-label col-md-2">Image: </label>
            <div style="width: 30%" class="form-group">
                <img style="max-width: 100%; object-fit: cover; width: 100%; height: 250px" src="@Model.UrlHinhAnh" alt="TP" />
                <input style="margin-top: 10px" type="file" name="ImageFile" class="form-control" accept=".png, .jpg, .jpeg" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Save Change</button>
            </div>
        </div>
    </div>
}
