@model Hotel_Booking.Models.Phong

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="@Url.Action("Index", "Home",new { area = "Admin" })" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a href="@Url.Action("Index", "AdminPhong",new { area = "Admin" })" class="breadcrumb-item">Danh sách phòng</a>
            <span class="breadcrumb-item active">Thêm mới</span>
        </nav>
    </div>
</div>

@using (Html.BeginForm(Html.BeginForm("Create", "AdminPhong", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Thêm mới</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Tên phòng</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Diện tích phòng</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DienTich, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DienTich, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Giá thuê phòng</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.GiaThue, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GiaThue, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tiện nghi </label>
        <div class="col-md-10">
            <textarea required placeholder="Tiện nghi" class="form-control" name="tienNghi"></textarea>
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Mô tả</label>
        <div class="col-md-10">
            <textarea required placeholder="Mô tả" class="form-control" name="moTa"></textarea>
        </div>
    </div>


    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label col-md-3">Loại giường</label>
            <div class="col-md-10">
                <select class="form-control" name="LoaiGiuong" id="LoaiGiuong">
                    <option value="1">Giường đơn</option>
                    <option value="2">Giường đôi</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Khách sạn</label>
        <div class="col-md-10">
            @Html.DropDownList("IdKhachSan", new SelectList(ViewBag.ListKhachsan, "Id", "Ten"), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdKhachSan, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        <label class="control-label col-md-2">Ảnh</label>
        <div class="form-group">
            <div class="col-md-10">
                <input type="file" name="ImageFile" required class="form-control" accept=".png, .jpg, .jpeg" />
            </div>
        </div>
    </div>

    <div class="form-group col-md-6">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary">Thêm mới</button>
        </div>
    </div>
</div>
}

