@model Hotel_Booking.Models.DatPhong

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="@Url.Action("Index", "Home",new { area = "Admin" })" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a href="@Url.Action("Index", "AdminDatPhong",new { area = "Admin" })" class="breadcrumb-item">List of Booking Hotel</a>
            <span class="breadcrumb-item active">Confirm Delete</span>
        </nav>
    </div>
</div>

<div class="card-body">
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.Id</td>
                </tr>
                <tr>
                    <td>Account Name:</td>
                    <td>@Model.TaiKhoan</td>
                </tr>
                <tr>
                    <td>Room Name:</td>
                    <td>@Model.Phong.Ten</td>
                </tr>
                <tr>
                    <td>Check-in:</td>
                    <td>@Model.NgayDen</td>
                </tr>
                <tr>
                    <td>Check-out:</td>
                    <td>@Model.NgayTra</td>
                </tr>
                @*<tr>
                        <td>Service:</td>
                        <td>@Model.DichVu</td>
                    </tr>
                    <tr>
                        <td>Note:</td>
                        <td>@Model.GhiChu</td>
                    </tr>*@
                <tr>
                    <td>Total:</td>
                    <td>@Model.ThanhTien</td>
                </tr>
                <tr>
                    <td>Payment status:</td>
                    @if (Model.isPaid == true)
                    {
                        <td>Đã thanh toán</td>
                    }
                    else
                    {
                        <td>Chưa thanh toán</td>
                    }
                </tr>
                <tr>
                    <td>Confirm Delete:</td>
                    <td>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <form asp-action="Delete">
                                <input type="hidden" />
                                <input type="submit" value="Xóa" class="btn btn-danger" />
                            </form>
                        }
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>

