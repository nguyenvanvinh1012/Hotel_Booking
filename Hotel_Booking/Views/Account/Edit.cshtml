@model Hotel_Booking.Models.TaiKhoan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span id="Message" class="d-none">@TempData["Message"]</span>
<span id="MessageErr" class="d-none">@TempData["MessageErr"]</span>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TenTaiKhoan)
    <div id="dashboard" class="pt-10 pb-10">
        <div class="container">
            <div class="dashboard-main">
                <div class="row">
                    @*menu*@
                    <div class="dashboard-sidebar">
                        <a href="#" class="dashboard-responsive-nav-trigger"><i class="fa fa-reorder"></i> Dashboard Navigation</a>
                        <div class="dashboard-nav">
                            <div class="dashboard-nav-inner">
                                <ul>
                                    <li class="active"><a id="account-dashboard-tab" href="@Url.Action("Index","Account")" role="tab" aria-controls="account-dashboard" aria-selected="true"><i class="sl sl-icon-settings"></i> Thông Tin Tài Khoản</a></li>
                                    <li><a id="account-details-tab" href="@Url.Action("Edit","Account")" role="tab" aria-controls="account-details" aria-selected="false"><i class="sl sl-icon-user"></i> Chỉnh Sửa Thông Tin</a></li>
                                    <li><a id="account-orders-tab" href="@Url.Action("Oder","Account")" role="tab" aria-controls="account-orders" aria-selected="false"><i class="fa fa-list-ul"></i>Lịch Sử Đặt Hàng</a></li>
                                    <li><a href="@Url.Action("DangXuat","Account")" role="tab" aria-selected="false"><i class="sl sl-icon-power"></i> Đăng Xuất</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    @*Chỉnh sửa thông tin*@
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12" id="account-details" role="tabpanel" aria-labelledby="account-details-tab">
                        <div class="dashboard-content">
                            <div class="dashboard-form mb-4">
                                <div class="row">
                                    @*Chỉnh sửa thông tin cá nhân*@

                                    <div class="col-lg-6 col-md-6 col-xs-12 padding-right-30">
                                        <div class="dashboard-list">
                                            <h4 class="gray">Thông Tin Tài Khoản</h4>
                                            <div class="dashboard-list-static">
                                                <div class="my-profile">
                                                    <div class="form-group">
                                                        <label>Họ và tên *</label>
                                                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", placeholder = "Họ và tên" } })
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Số điện thoại *</label>
                                                        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", placeholder = "Số điện thoại" } })
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Email  *</label>
                                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="twitter-input"><i class="fab fa-twitter"></i> Twitter</label>
                                                        <input placeholder="https://www.twitter.com/" type="text">
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="fb-input"><i class="fab fa-facebook"></i> Facebook</label>
                                                        <input placeholder="https://www.facebook.com/" type="text">
                                                    </div>
                                                </div>
                                                <div class="form-btn">
                                                    <button type="submit">
                                                        <div class="form-btn mar-top-15">
                                                            <span class="nir-btn">Lưu </span>
                                                        </div>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*Chỉnh sửa mật khẩu*@

                                    <div class="col-lg-6 col-md-6 col-xs-12 padding-left-30">
                                        <div class="dashboard-password">
                                            <h4>Đổi Mật Khẩu</h4>
                                            <div class="dashboard-list-static">
                                                <div class="my-profile">
                                                    <div class="form-group">
                                                        <label>Mật khẩu hiện tại</label>
                                                        <input type="password" name="MKhienTai" placeholder="*********">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Mật khẩu mới</label>
                                                        <input type="password" name="MKmoi" placeholder="Mật khẩu mới">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Xác nhận mật khẩu mới</label>
                                                        <input type="password" name="xacNhanMKmoi" placeholder="Xác nhận mật khẩu">
                                                    </div>
                                                    <div class="col-lg-12">
                                                        <button type="submit">
                                                            <div class="form-btn mar-top-15">
                                                                <span class="nir-btn">Lưu </span>
                                                            </div>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            var message = $('#Message').text();
            if (message !== '') {
                toastr.success(message);
            }
        });

        $(document).ready(function () {
            var messageErr = $('#MessageErr').text();
            if (messageErr !== '') {
                toastr.error(messageErr);
            }
        });
    </script>
}

