@model Hotel_Booking.Models.TaiKhoan

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span id="Message" class="d-none">@TempData["Message"]</span>
<span id="MessageErr" class="d-none">@TempData["MessageErr"]</span>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body p-0">
        <div class="login-content p-4 text-center">
            <div class="login-title section-border">
                <h3 style="font-size: 23px" class="pink mb-1">Register</h3>
                <p>Access thousands of online classes in design, business, and more!</p>
            </div>
            <div class="login-form text-center">
                <form>
                    <div style="width: 60%" class="form-group">
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Full Name" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>
                    <div style="width: 60%" class="form-group">
                        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Phone Number" } })
                        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                    </div>
                    <div style="width: 60%" class="form-group">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Email Address" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div style="width: 60%" class="form-group">
                        @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter User Name" } })
                        @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })
                    </div>
                    <div style="width: 60%" class="form-group">
                        <input name="matkhau" type="password" placeholder="Enter Password">
                    </div>
                    <div style="width: 60%" class="form-group">
                        <input name="xacnhanmatkhau" type="password" placeholder="Confirm Password">
                    </div>
                </form>
                <div style="width: 60%" class="form-group">
                    <input  style="width: 100%" type="submit" value="Register" class="nir-btn">
                </div>
                <div class="form-group mb-0 form-checkbox mt-3">
                    <input type="checkbox"> By clicking this, you are agree to to<a href="#" class="">
                        our
                        terms of use
                    </a> and <a href="#" class="">privacy policy</a> including the use of
                    cookies
                </div>
            </div>
            <div class="login-social border-t mt-3 pt-2 mb-3">
                <p class="mb-2">OR continue with</p>
                <a href="#" class="btn-facebook">
                    <i class="fab fa-facebook" aria-hidden="true"></i>
                    Facebook
                </a>
                <a href="#" class="btn-twitter">
                    <i class="fab fa-twitter" aria-hidden="true"></i>
                    Twitter
                </a>
                <a href="#" class="btn-google"><i class="fab fa-google" aria-hidden="true"></i> Google</a>
            </div>
            <div class="sign-up">
                <p class="m-0">Already have an account? <a href="login.html" class="pink">Login</a></p>
            </div>

        </div>
    </div>
}



@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            var message = $('#Message').text();
            if (message !== '') {
                toastr.success(message);
            }
        });

        $(document).ready(function () {
            var messageErr = $('#MessageErr').text();
            if (messageErr !== '') {
                toastr.error(messageErr);
            }
        });
    </script>
}
