@model Hotel_Booking.Models.TaiKhoan

@{
    ViewBag.Title = "Confirm1";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Hotel_Booking.Models.ThanhPho TP = ViewBag.ThanhPho;
    Hotel_Booking.Models.Phong Phong = ViewBag.Phong;
    int tongTien = ViewBag.TongTien;
}

<section class="breadcrumb-main pb-0" style="background-image: url(/Content/assets/images/bg/bg8.jpg);">
    <div class="breadcrumb-outer pt-10">
        <div class="container">
            <div class="breadcrumb-content d-md-flex align-items-center pt-10">
                <h2 class="mb-0"></h2>
                <nav aria-label="breadcrumb">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"></a></li>
                        <li class="breadcrumb-item active" aria-current="page"></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <div class="dot-overlay"></div>
</section>


<section class="blog trending destination-b pb-6">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xs-12 mb-4">
                <div class="payment-book">
                    <div class="description flight-book mb-4">
                        <div class="detail-title"><h3>THÔNG TIN CỦA BẠN</h3></div>
                        <div class="description-content">
                            <form>
                                <div class="form-group">
                                    <label>Họ và tên:</label>
                                    @Html.DisplayFor(model => model.HoTen)
                                    @*<input type="text" class="form-control" id="fName" placeholder="Enter full name">*@
                                </div>
                                <div class="form-group">
                                    <label>Email:</label>
                                    @Html.DisplayFor(model => model.Email)
                                    @*<input type="text" class="form-control" id="email1" placeholder="abc@xyz.com">*@
                                </div>
                                <div class="form-group col-left-padding">
                                    <label>Số điện thoại:</label>
                                    @Html.DisplayFor(model => model.SoDienThoai)
                                    @*<input type="text" class="form-control" id="phnumber1" placeholder="XXXX-XXXXXX">*@
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="comment-btn mb-4">
                        <a href="#" class="nir-btn">Chọn phương thức đặt phòng</a>
                    </div>
                    <div class="description detail-box mb-4">
                        <div class="booking-box">
                            @*<div class="booking-box-title d-md-flex align-items-center bg-pink p-4 mb-4">
                                    <i class="fa fa-check"></i>
                                    <div class="title-content ml-3">
                                        <h3 class="mb-0 white">Thank You. Your booking order is confirmed now.</h3>
                                        <p class="mb-0 white">A confirmation email has been sent to your provided email address.</p>
                                    </div>
                                </div>*@
                            <div class="booking-border mb-2 bg-lgrey p-4">
                                <a  href="@Url.Action("Order", "DatPhong")"  style="font-weight: bold; font-size: 20px; margin-bottom:25px" class="border-b pb-2 mb-2">
                                    Thanh khi nhận phòng                                   
                                </a>
                                <p style="margin-top: 20px">This is the third time I've used Travelo Website and telling you the truth their services are always reliable and it ony takes few minutes to plan and finalize.</p>
                            </div>
                            <div class="booking-border mb-2 bg-lgrey p-4">
                                <a  href="@Url.Action("OrderMomo", "DatPhong")" style="font-weight: bold; font-size: 20px; margin-bottom:25px" class="border-b pb-2 mb-2">
                                    Thanh toán điện tử
                                    <img style="width: 28px; border-radius: 3px; margin-left: 5px" src="~/Content/Images/momo.png" />
                                </a>
                                <p style="margin-top: 20px">This is the third time I've used Travelo Website and telling you the truth their services are always reliable and it ony takes few minutes to plan and finalize.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-xs-12 mb-4">
                <div class="sidebar-sticky">
                    <div class="sidebar-item mb-4">
                        <div class="trend-item mb-0">
                            <div class="trend-image">
                                <img src="@Phong.UrlHinhAnh" alt="image">
                                <div class="trend-tags">
                                    <a href="#"><i class="flaticon-like"></i></a>
                                </div>
                            </div>
                            <div class="trend-content-main">
                                <div class="trend-content">
                                    <h4 class="mb-1 p-0 bordernone"><a href="#" class="" tabindex="0">@Phong.Ten</a></h4>
                                    <p class="mb-0"><i class="fa fa-map-marker mr-2 grey"></i>@TP.Ten</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="list-sidebar">
                        <div class="sidebar-item">
                            <h3>Chi tiết đặt phòng</h3>
                            <ul class="list-unstyled font-size-1 mb-0 font-size-16">
                                <li class="d-flex justify-content-between py-1 border-b">
                                    <span class="font-weight-medium">Date <br>@ViewBag.NgayDen<br>@ViewBag.NgayDi</span>
                                </li>
                                <li class="d-flex justify-content-between py-1 border-b">
                                    <span class="font-weight-medium">Giá thuê </span>
                                    <span class="text-secondary">@Phong.GiaThue.Value.ToString("#,##0") VNĐ</span>
                                </li>
                                <li class="d-flex justify-content-between py-1 border-b">
                                    <span class="font-weight-medium">Tổng tiền</span>
                                    <span class="text-secondary pink">@tongTien.ToString("#,##0") VNĐ</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>